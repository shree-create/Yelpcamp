<%- include ('../partials/header.ejs') %>
<div class="container">
  <h1 class="text-center mb-3 mt-5">Create new Campground</h1>
  <div style="width:30% ;margin:0 auto">
  <form action="/campgrounds" method="post">
    <input class="form-control mb-4" type="text" name="name" placeholder="Name">
    <input class="form-control mb-4" type="number" name="price" placeholder="Price" min="0.01" step="0.01">
    <input class="form-control mb-4" type="text" name="image" placeholder="Image url">
    <input class="form-control mb-4" type="text" name="description" placeholder="description">
    <button class="btn btn-lg btn-primary btn-block " type="submit" name="submit">Submit</button>
  </form>
    <a href="/campgrounds">Go Back</a>
  </div>
</div>
