<%- include ('../partials/header.ejs') %>


<div class="container">
  <h1 class="text-center mb-3 mt-5">Edit Comment</h1>
  <div style="width:30% ;margin:0 auto">
  <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
    <input class="form-control mb-4" type="text" name="comment[text]" value="<%= comment.text %>">
